# Generated by Chef for <%= node[:fqdn] %>

global {
  usage-count no;
}
common {
  disk {
    on-io-error detach;
  }
  protocol C;
}
resource <%= @resource %> {
  on <%= node.name %> {
    device    <%= node['drbd']['dev'] %>;
    disk      <%= node['drbd']['disk'] %>;
    address   <%=@my_ip%>:<%= node['drbd']['port'] %>;
    meta-disk internal;
  }
  on <%= node['drbd']['remote_host'] %> {
    device    <%= node['drbd']['dev'] %>;
    disk      <%= node['drbd']['disk'] %>;
    address   <%= @remote_ip %>:<%= node['drbd']['port'] %>;
    meta-disk internal;
  }
  syncer {
     rate <% node['drbd']['syncrate'];
  }
}

